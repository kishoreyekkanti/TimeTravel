	android:layout_height="fill_parent" android:gravity="center_vertical">
	<Button android:id="@+id/start_camera" android:layout_width="fill_parent"
		android:layout_marginLeft="80dip" android:layout_marginRight="80dip"
		android:layout_marginTop="10dip" android:layout_height="wrap_content"
		android:text="Start Camera" />

	<ImageView android:id="@+id/camera_preview"
